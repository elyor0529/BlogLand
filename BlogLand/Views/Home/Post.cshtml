@model BlogLand.Models.Post

<div class="seperatepost">
    <div id="top-content">
        <div class="post-head">
            @Html.PostLink(Model)
        </div>
        <div class="row">
            <div class="categ-head">
                <span>Category: </span>  @Html.CategoryLink(Model.Category)
            </div>
            <div class="tag-head">
                <p> <span>Tags: </span> @Helpers.Tags(Html, Model.Tags)</p>
            </div>
            <div class="post-time">
                @Model.PostedOn.ToLocalTime()
            </div>
        </div>
    </div>
    <div class="post-shd">
        @Model.Description
    </div>
    </div>
<div class="clearfix"></div>
